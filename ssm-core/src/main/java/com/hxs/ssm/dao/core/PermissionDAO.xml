<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hxs.ssm.dao.core.PermissionDAO">
    <resultMap id="default" type="com.hxs.ssm.model.Permission">
        <result column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="sign" property="sign"/>
        <result column="desc" property="desc"/>
        <result column="createTime" property="createTime"/>
        <result column="updateTime" property="updateTime"/>
        <result column="creator" property="creator"/>
        <result column="updateBy" property="updateBy"/>
    </resultMap>

    <sql id="all_column">
        `id`,
        `name`,
        `sign`,
        `desc`,
        `createTime`,
        `updateTime`,
        `creator`,
        `updateBy`
    </sql>
    <sql id="where">
        <if test="id!=null and id!=''">
            and `id` = #{id}
        </if>
        <if test="name!=null and name!=''">
            and `name` = #{name}
        </if>
        <if test="sign!=null and sign!=''">
            and `sign` = #{sign}
        </if>
        <if test="sSearch!=null and sSearch!=''">
            and(
              `id` like "%"#{sSearch}"%"
            or `name` like "%"#{sSearch}"%"
            or `sign` like "%"#{sSearch}"%"
            )
        </if>
    </sql>
    <sql id="order">
        <if test="sidx!=null and sidx!=''">
            order by ${sidx} ${sord}
        </if>
    </sql>
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_sys_permission (
            `id`,
            `name`,
            `sign`,
            `desc`,
            `createTime`,
            `updateTime`,
            `creator`,
            `updateBy`
        ) VALUES (
            #{id},
            #{name},
            #{sign},
            #{desc},
            #{createTime},
            #{updateTime},
            #{creator},
            #{updateBy}
        )
    </insert>
    <update id="update">
        UPDATE t_sys_permission
        <set>
            <if test="id != null">`id` = #{id},</if>
            <if test="name != null">`name` = #{name},</if>
            <if test="sign != null">`sign` = #{sign},</if>
            <if test="desc != null">`desc` = #{desc},</if>
            <if test="createTime != null">`createTime` = #{createTime},</if>
            <if test="updateTime != null">`updateTime` = #{updateTime},</if>
            <if test="creator != null">`creator` = #{creator},</if>
            <if test="updateBy != null">`updateBy` = #{updateBy}</if>
        </set>
        WHERE `id` = #{id}
    </update>
    <delete id="deleteById">
        delete from t_sys_permission
        where `id`=#{id}
    </delete>
    <select id="findByIdAndName" resultMap="default">
        select
        <include refid="all_column"/>
        from t_sys_permission
        where `name`=#{name}
        <if test="id!=null and id!=''">
            and `id` <![CDATA[<>]]> #{id}
        </if>
    </select>
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from t_sys_permission
        where 1=1
        <include refid="where"/>
    </select>
    <select id="query" resultMap="default">
        select
        <include refid="all_column"/>
        from t_sys_permission
        where 1=1
        <include refid="where"/>
        <include refid="order"/>
        <if test="isPagination">
            limit #{iDisplayStart}, #{iDisplayLength}
        </if>
    </select>
    <select id="getNewCode" resultType="java.lang.String">
        select max(`id`)from t_sys_permission where 1=1
    </select>
</mapper>

