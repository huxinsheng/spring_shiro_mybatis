<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper    
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"    
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="com.hxs.ssm.dao.core.BillSequnceDAO">
	<!-- 结果映射 -->
	<resultMap id="default" type="com.hxs.ssm.model.core.BillSequnce">
		<result property="code" column="code" />
		<result property="sequnce" column="sequnce" />
	</resultMap>
	<select id="getByKey" resultMap="default">
		select * from t_sys_bill_sequnce where code=#{code}
	</select>
	<insert id="add">
		insert into t_sys_bill_sequnce(code,sequnce)
		values(#{code},#{sequnce});
	</insert>
	<update id="update">
		update t_sys_bill_sequnce set sequnce=#{sequnce}
		where code=#{code}
	</update>
</mapper>